<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jizhi.android.qiujieda.lite.components.infiniteindicator.indicator.LineIndicator
        android:id="@+id/default_center_bottom_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/content_padding"
        app:lineIndicatorWidth="20dp"
        app:normalColor="@color/gray"
        app:normalHeight="3dp"
        app:selectColor="@color/colorPrimary"
        app:selectHeight="6dp" />

</RelativeLayout>