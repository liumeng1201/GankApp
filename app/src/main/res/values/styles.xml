<resources>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCustomPopupTheme" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="MyCustomAppBarTheme" parent="ThemeOverlay.AppCompat.Dark"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ControlBarButtonTheme.Normal" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/button_grey</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ControlBarButtonTheme.Favorite" parent="Theme.AppCompat.Light">
        <item name="android:tint">@color/yellow</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
